# * Prometheus / Mimir connection
# PROMETHEUS_INSECURE=false  # Optional: set to true to disable TLS verification
# Optional: basic auth user and password (both must be set for auth to work)
# Empty string password is allowed (different from unset/None)
PROMETHEUS_PASSWORD=
# Step resolution for query_range (should match scrape_interval)
# PROMETHEUS_QUERY_STEP_SECONDS=15  # Optional: step resolution in seconds
# PROMETHEUS_TIMEOUT=10  # Optional: HTTP request timeout in seconds
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_USER=

# * ClickHouse connection
# CLICKHOUSE_CONNECT_TIMEOUT=10  # Optional: HTTP connection timeout in seconds
# CLICKHOUSE_INSECURE=false  # Optional: set to true to disable TLS verification
# Empty string password is allowed (different from unset/None)
CLICKHOUSE_PASSWORD=
# CLICKHOUSE_SEND_RECEIVE_TIMEOUT=300  # Optional: HTTP send/receive timeout in seconds
# CLICKHOUSE_TABLE_STATE=default.etl  # Optional: table name for ETL state (default: default.etl)
CLICKHOUSE_TABLE=default.metrics
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default

# * PushGateway connection
# Empty string password is allowed (different from unset/None)
# PUSHGATEWAY_INSECURE=false  # Optional: set to true to disable TLS verification
PUSHGATEWAY_INSTANCE=etl_prometheus2clickhouse
PUSHGATEWAY_JOB=etl_prometheus2clickhouse
PUSHGATEWAY_PASS=
# PUSHGATEWAY_TIMEOUT=10  # Optional: HTTP request timeout in seconds
PUSHGATEWAY_TOKEN=
PUSHGATEWAY_URL=http://localhost:9091
PUSHGATEWAY_USER=

# * ETL settings
# BATCH_WINDOW_OVERLAP_SECONDS=0  # Optional: overlap in seconds to avoid missing data at boundaries
# BATCH_WINDOW_SIZE_SECONDS=300  # Optional: processing window size in seconds
# TEMP_DIR=/tmp  # Optional: temporary directory for intermediate data files

# * Logging
# LOG_LEVEL=INFO  # Optional: logging level
