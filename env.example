# Prometheus / Mimir connection
PROMETHEUS_URL=http://localhost:9090
# Optional: basic auth user and password (both must be set for auth to work)
# Empty string password is allowed (different from unset/None)
PROMETHEUS_USER=
PROMETHEUS_PASSWORD=
# PROMETHEUS_INSECURE=  # Optional: set to true to disable TLS verification
PROMETHEUS_TIMEOUT=10
# Step resolution for query_range (should match scrape_interval, default: 15s)
PROMETHEUS_QUERY_STEP_SECONDS=15

# ClickHouse connection
CLICKHOUSE_URL=http://localhost:8123
# Empty string password is allowed (different from unset/None)
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_CONNECT_TIMEOUT=10
CLICKHOUSE_SEND_RECEIVE_TIMEOUT=300
# CLICKHOUSE_INSECURE=  # Optional: set to true to disable TLS verification
CLICKHOUSE_TABLE=default.prometheus_raw

# PushGateway connection
PUSHGATEWAY_URL=http://localhost:9091
PUSHGATEWAY_TOKEN=
# Empty string password is allowed (different from unset/None)
PUSHGATEWAY_USER=
PUSHGATEWAY_PASS=
PUSHGATEWAY_TIMEOUT=10
# PUSHGATEWAY_INSECURE=  # Optional: set to true to disable TLS verification
PUSHGATEWAY_JOB=etl_prometheus2clickhouse
PUSHGATEWAY_INSTANCE=etl_prometheus2clickhouse

# ETL settings
BATCH_WINDOW_SIZE_SECONDS=300
BATCH_WINDOW_OVERLAP_SECONDS=0

# Logging
LOG_LEVEL=INFO
